<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="application.player_Controller">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="700.0">
         <children>
            <Label fx:id="user_label" alignment="CENTER" layoutX="246.0" layoutY="14.0" prefHeight="20.0" prefWidth="209.0" text="Welcome Text">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TableView fx:id="Player_Table" layoutX="23.0" layoutY="131.0" prefHeight="199.0" prefWidth="659.0">
              <columns>
                <TableColumn fx:id="Player_ID" prefWidth="79.0" text="Player Id" />
                <TableColumn fx:id="Player_Name" prefWidth="180.0" text="Player Name" />
                  <TableColumn fx:id="Date_Of_Birth" prefWidth="113.0" text="Date Of Birth" />
                  <TableColumn fx:id="City" prefWidth="144.0" text="City" />
                  <TableColumn fx:id="Role" prefWidth="142.0" text="Role" />
              </columns>
            </TableView>
            <Label fx:id="user_text" alignment="CENTER" layoutX="9.0" layoutY="70.0" prefHeight="35.0" prefWidth="685.0" text="Following are the Players playing in the team administered by you.">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <TextField fx:id="enter_playerid" layoutX="30.0" layoutY="366.0" promptText="Enter Player ID" />
            <TextField fx:id="enter_playername" layoutX="196.0" layoutY="366.0" promptText="Enter Player Name" />
            <TextField fx:id="enter_dateofbirth" layoutX="366.0" layoutY="366.0" promptText="Enter Date of Birth" />
            <TextField fx:id="enter_city" layoutX="533.0" layoutY="366.0" promptText="Enter City" />
            <TextField fx:id="enter_role" layoutX="111.0" layoutY="409.0" promptText="Enter Role" />
            <TextField fx:id="team_id" layoutX="451.0" layoutY="409.0" promptText="Enter Team ID" />
            <Button fx:id="add_button" layoutX="170.0" layoutY="476.0" mnemonicParsing="false" onAction="#insertPlayer" text="Add Player" />
            <Button fx:id="search_button" layoutX="327.0" layoutY="476.0" mnemonicParsing="false" onAction="#searchTeam" text="Search" />
            <Button fx:id="delete_button" layoutX="474.0" layoutY="476.0" mnemonicParsing="false" onAction="#DeletePlayer" text="Delete Player" />
            <Button fx:id="player_mainmenu" layoutX="322.0" layoutY="543.0" mnemonicParsing="false" onAction="#backtomenu" text="Main Menu" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
